{
	"name": "@eix/core",
	"version": "1.0.0",
	"description": "the core of the eix game engine",
	"main": "dist/main",
	"scripts": {
		"lint": "eslint src/**/*.ts",
		"lint:fix": "prettier-eslint \"**/*.ts\" --write",
		"test": "mocha",
		"docs": "typedoc --out docs ./src"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"npm run lint:fix",
			"git add ."
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eix-js/core"
	},
	"keywords": [
		"engine",
		"core",
		"eix"
	],
	"author": "Matei Adriel",
	"license": "SEE LICENSE IN LICENSE",
	"bugs": {
		"url": "https://github.com/eix-js/core/issues"
	},
	"homepage": "https://github.com/eix-js/core/#readme",
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.0.8",
		"@typescript-eslint/eslint-plugin": "^1.10.2",
		"@typescript-eslint/parser": "^1.10.2",
		"chai": "^4.2.0",
		"eslint": "^5.16.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.17.3",
		"eslint-plugin-jsdoc": "^7.2.3",
		"eslint-plugin-node": "^9.1.0",
		"eslint-plugin-promise": "^4.1.1",
		"eslint-plugin-standard": "^4.0.0",
		"mocha": "^6.1.4",
		"prettier-eslint": "^8.8.2",
		"prettier-eslint-cli": "^4.7.1",
		"source-map-support": "^0.5.12",
		"ts-node": "^8.1.0",
		"typedoc": "^0.14.2",
		"typedoc-plugin-external-module-name": "^2.1.0",
		"typedoc-vortex-theme": "0.0.2",
		"typescript": "^3.4.4"
	},
	"dependencies": {
		"@eix/utils": "git+https://github.com/eix-js/utils.git",
		"deepmerge": "^3.2.0",
		"rxjs": "^6.5.2"
	}
}
